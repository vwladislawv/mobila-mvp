---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact" description="Book a consultation or reach our studio team.">
  <section class="hero compact">
    <div class="hero-text">
      <p class="eyebrow">Contact</p>
      <h1>Let us build the next piece for your space.</h1>
      <p class="lede">
        Share your timeline, budget range, and inspiration. We will reply within two business days.
      </p>
    </div>
    <div class="hero-card">
      <div class="hero-image alt-three"></div>
      <div class="hero-card-body">
        <h3>Studio availability</h3>
        <p>Now scheduling new projects for the upcoming quarter.</p>
      </div>
    </div>
  </section>

  <section class="section split">
    <div>
      <h2>Reach us directly</h2>
      <p>Prefer to talk? Contact our studio team during weekday hours.</p>
      <div class="contact-cards">
        <div class="card">
          <h3>Phone</h3>
          <p><a href="tel:+15551234567">+1 (555) 123-4567</a></p>
        </div>
        <div class="card">
          <h3>WhatsApp</h3>
          <p>Fast replies for quick questions.</p>
          <a class="button primary" href="https://wa.me/15551234567">Chat on WhatsApp</a>
        </div>
        <div class="card">
          <h3>Email</h3>
          <p><a href="mailto:hello@mobilastudio.com">hello@mobilastudio.com</a></p>
        </div>
      </div>
    </div>
    <div>
      <h2>Project inquiry</h2>
      <p class="muted">This form is a demo. It does not send data.</p>
      <form id="contact-form" class="contact-form">
        <label>
          Full name
          <input type="text" name="name" placeholder="Jane Doe" required />
        </label>
        <label>
          Email
          <input type="email" name="email" placeholder="jane@email.com" required />
        </label>
        <label>
          Project type
          <select name="project" required>
            <option value="">Select one</option>
            <option>Kitchen</option>
            <option>Wardrobe</option>
            <option>Living room</option>
            <option>Commercial</option>
          </select>
        </label>
        <label>
          Message
          <textarea name="message" rows="4" placeholder="Tell us about your space"></textarea>
        </label>
        <button class="button primary" type="submit">Send inquiry</button>
        <p id="form-message" class="form-message" role="status"></p>
      </form>
    </div>
  </section>

  <script>
    const form = document.getElementById("contact-form");
    const message = document.getElementById("form-message");

    form?.addEventListener("submit", (event) => {
      event.preventDefault();
      if (message) {
        message.textContent = "Thanks! This demo form does not send data.";
      }
      form.reset();
    });
  </script>
</BaseLayout>
